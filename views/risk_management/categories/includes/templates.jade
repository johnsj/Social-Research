script(type="text/template", id="category-list-table-template")
  table.item_list#risk_list
    thead
      tr
        th Category Title
        th
        th#actionButtons
    tbody#category_list_content

script(type="text/template", id="category-list-tablerow-template")
  td#risk_title <%= model.get('title') %>
  td#risk_category <%= model.get('parent').title %>
  td#actionButtons
    <a id="showMore" href="#/categories/<%= model.get('_id')%>"> Show more
    <a id="edit" href="#/categories/edit/<%= model.get('_id')%>"> Edit
    <a id="delete" href="#/categories/delete/<%= model.get('_id')%>"> Delete

script(type="text/template", id="category-detail-template")
  h3#category-title <%= model.get('title') %>
  p#category-description <%= model.get('description') %>
  .item_detail#parent-detail <%= model.get('parent').title %> <%= model.get('parent').description %>
